<script>
function load_config(){
    $.ajax({url: "/home_station/get_config", success: function(result){
        result=JSON.parse(result);
        $("#url").val(result.url);
        $("#period").val(result.period);
        }});  
    }
</script>
<title>Home Station Config</title>
</head>
